@model IEnumerable<MediLink.Models.Hospital>

@{
    ViewData["Title"] = "Home - MediLink";
}

<section class="hero-section text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-4 mb-3">Book Your Health Appointment Easily</h1>
        <p class="lead mb-4">Find your nearest hospital and book an appointment in minutes</p>
        <a href="@Url.Action("Book", "Appointment")" class="btn btn-primary btn-lg">Book Appointment</a>
    </div>
</section>

<section class="quick-actions py-4">
    <div class="container d-flex justify-content-center gap-3">
        <a href="#" class="btn btn-outline-primary btn-lg flex-fill">
            <i class="bi bi-telephone-fill"></i> Emergency Services
        </a>
        <a href="#" class="btn btn-outline-secondary btn-lg flex-fill">
            <i class="bi bi-hospital"></i> Find Hospital Near Me
        </a>
    </div>
</section>

<section class="hospital-listing py-5">
    <div class="container">
        <h2 class="mb-4">Hospitals & Clinics</h2>

        <form method="get" asp-controller="Home" asp-action="Index" class="row g-3 mb-4">
            <div class="col-md-4">
                <input name="searchTerm" class="form-control" placeholder="Search by name..." value="@ViewData["SearchTerm"]" />
            </div>
            <div class="col-md-3">
                <select name="province" class="form-select">
                    <option value="">Select Province</option>
                    @* Populate from your provinces list *@
                    <option>Province 1</option>
                    <option>Province 2</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="city" class="form-select">
                    <option value="">Select City</option>
                    @* Populate from your cities list *@
                    <option>City A</option>
                    <option>City B</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Apply</button>
            </div>
        </form>

        <div class="row">
            @foreach (var hospital in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@hospital.Name</h5>
                            <p class="card-text">@hospital.Address</p>
                            <a href="@Url.Action("Book", "Appointment", new { hospitalId = hospital.Id })" class="btn btn-outline-primary">
                                Book Appointment
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
