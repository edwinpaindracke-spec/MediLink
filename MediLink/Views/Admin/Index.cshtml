@model IEnumerable<MediLink.Models.Appointment>

<h2>Admin Dashboard</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Hospital</th>
            <th>Date & Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patient?.Email</td>
                <td>@item.Hospital?.Name</td>
                <td>@(item.AppointmentDateTime?.ToString("dd MMM yyyy hh:mm tt") ?? "Not scheduled")</td>

                <td>
                    <span class="badge
                    @(item.Status == "Confirmed" ? "bg-success" :
                                            item.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                    @item.Status
                </span>
            </td>
            <td>
                @if (item.Status == "Pending")
                    {
                        <form asp-action="Confirm" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                Confirm
                            </button>
                        </form>

                        <form asp-action="Reject" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Reject
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
