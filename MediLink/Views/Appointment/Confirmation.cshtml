@model MediLink.Models.Appointment

@{
    ViewData["Title"] = "Appointment Confirmation";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <h4>@TempData["Success"]</h4>
        <p>
            <a asp-action="MyAppointments">
                View your profile to see your booked appointment
            </a>
        </p>
    </div>
}

<hr />

<h5>Appointment Details</h5>

<dl class="row">
    <dt class="col-sm-3">Hospital</dt>
    <dd class="col-sm-9">@Model.Hospital?.Name</dd>

    <dt class="col-sm-3">Patient Name</dt>
    <dd class="col-sm-9">@Model.PatientName</dd>

    <dt class="col-sm-3">Location</dt>
    <dd class="col-sm-9">@Model.Location</dd>

    <dt class="col-sm-3">Problem</dt>
    <dd class="col-sm-9">@Model.ProblemDescription</dd>

    <dt class="col-sm-3">Date & Time</dt>
    <dd class="col-sm-9">
        @Model.AppointmentDateTime.ToString("dd MMM yyyy, hh:mm tt")
    </dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>
