@model IEnumerable<MediLink.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
}

<div class="container mt-5">
    <h3>My Appointments</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            You have no appointments yet.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-light">
                <tr>
                    <th>Hospital</th>
                    <th>Patient</th>
                    <th>Date & Time</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in Model)
                {
                    <tr>
                        <td>@appt.Hospital?.Name</td>
                        <td>@appt.PatientName</td>
                        <td>
                            @if (appt.Status == "Confirmed")
                            {
                                @appt.AppointmentDateTime.ToString("dd MMM yyyy, hh:mm tt")
                            }
                            else
                            {
                                <span class="live-time" data-id="@appt.Id"></span>
                            }
                        </td>


                        <td>
                            <span class="badge bg-@(appt.Status == "Confirmed" ? "success" : "secondary")">
                                @appt.Status
                            </span>
                        </td>
                        <td>
                            @if (appt.Status == "Draft")
                            {
                                <a asp-action="Schedule"
                                   asp-route-id="@appt.Id"
                                   class="btn btn-sm btn-primary">
                                    Continue Booking
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<script>
    function updateLiveTimes() {
        const now = new Date();

        const formatted =
            now.toLocaleDateString("en-GB", {
                day: "2-digit",
                month: "short",
                year: "numeric"
            }) +
            ", " +
            now.toLocaleTimeString("en-GB", {
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit"
            });

        document.querySelectorAll(".live-time").forEach(el => {
            el.textContent = formatted;
        });
    }

    updateLiveTimes();               // initial load
    setInterval(updateLiveTimes, 1000); // update every second
</script>
